<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/apple"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manejo del evento click"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/numero1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="40dp"
        android:drawableStart="@drawable/ic_lap"
        android:hint="Ingrese el primer numero"
        android:inputType="number"
        android:textColor="#CDDC39"
        android:textColorHint="#F44336" />

    <EditText
        android:id="@+id/numero2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="40dp"
        android:drawableStart="@drawable/ic_lap"
        android:hint="Ingrese el segundo numero"
        android:inputType="number"

        android:textColor="#FFEB3B"
        android:textColorHint="#F44336" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnsumar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sumar" />

        <Space
            android:layout_width="5dp"
            android:layout_height="0dp">

        </Space>


        <Button
            android:id="@+id/btnrestar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restar" />
        <Space
            android:layout_width="5dp"
            android:layout_height="0dp">

        </Space>

        <Button
            android:id="@+id/btnmulti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multi"


            />
        <Space
            android:layout_width="5dp"
            android:layout_height="0dp">

        </Space>

        <Button
            android:id="@+id/btndividir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dividir"

            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/lblresu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_chek"
        android:text="0.0"
        android:textAlignment="center"
        android:textSize="100dp"
        android:layout_marginTop="40dp"

        />


</androidx.appcompat.widget.LinearLayoutCompat>